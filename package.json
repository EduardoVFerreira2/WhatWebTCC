{
  "name": "whatsappwebserver",
  "version": "1.0.0",
  "description": "Servidor para integrar com WhatsApp Web usando Node.js e TypeScript",
  "main": "dist/index.js",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "start": "ts-node index.ts",
    "build": "tsc",
    "dev": "ts-node-dev --respawn --transpile-only index.ts",
    "pm2-restart": "git pull && pm2 stop WhatsappApp && yarn build && pm2 start ecosystem.config.js --env production && pm2 log",
    "pm2-start": "git pull && npm run build && pm2 start ecosystem.config.js --env production && pm2 save && pm2 list && pm2 show WhatsappApp",
    "info": "pm2 list && pm2 show WhatsappApp"
  },
  "keywords": [
    "whatsapp",
    "nodejs",
    "typescript",
    "express"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@whiskeysockets/baileys": "^6.7.13",
    "axios": "^1.7.9",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "fluent-ffmpeg": "^2.1.3",
    "link-preview-js": "^3.0.14",
    "mysql-baileys": "^1.5.1",
    "pino": "^9.6.0",
    "qrcode-terminal": "^0.12.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^5.0.0",
    "@types/fluent-ffmpeg": "^2.1.27",
    "@types/node": "^22.10.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.7.2"
  }
}
